
<div class="container my-4">
  <h1 class="mb-4"><%= @flat.name %></h1>

  <img src="<%= @flat.picture_url %>" class="img-fluid rounded mb-4" style="max-width: 300px; height: auto;" alt="<%= @flat.name %>">

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Address</h5>
      <p class="card-text"><%= @flat.address %></p>
      <h5 class="card-title">Description</h5>
      <p class="card-text"><%= @flat.description %></p>
      <h5 class="card-title">Details</h5>
      <p class="card-text">
        <i class="fa-solid fa-users me-2"></i> <%= @flat.number_of_guests %> guests
        <i class="fa fa-euro-sign ms-3 me-2"></i> <%= @flat.price_per_night %> per night
      </p>
    </div>
  </div>

  <div class="d-flex">
    <%= link_to "Back to Flats", flats_path, class: "btn btn-secondary me-2" %>
    <%= link_to "Edit", edit_flat_path(@flat), class: "btn btn-warning me-2" %>
    <%= button_to "Remove", flat_path(@flat), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>
